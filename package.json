{
  "name": "make-exercises-math",
  "version": "0.8.1",
  "description": "Make Exercises for Fundamental School Math Lectures",
  "license": "EUPL-1.1",
  "repository": {
    "type": "",
    "url": "https://github.com/M3ssman/make-exercises-math.git"
  },
  "main": "./index.js",
  "typings": "./index.d.ts",
  "files": [
    "src/*.js",
    "src/*.d.ts",
    "./index.js"
  ],
  "scripts": {
    "pretest": "tsc -p .",
    "mocha": "./node_modules/.bin/mocha --reporter list ./test/*.js",
    "test": "NODE_ENV=test mocha",
    "coverage": "./node_modules/.bin/nyc npm test",
    "prepare": "tsc -d -p ."
  },
  "keywords": [
    "education",
    "mathematics",
    "school"
  ],
  "author": {
    "name": "M3ssman",
    "email": "uwe.hartwig@bitsrc.info"
  },
  "dependencies": {
    "@types/chai": "^4.0.10",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.5.2"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "mocha": "4.1.0",
    "nyc": "11.4.1",
    "ts-node": "4.1.0"
  },
  "nyc": {
    "include": [
      "**"
    ],
    "reporter": [
      "html"
    ],
    "exclude": [
      "*.d.ts",
      "test/**"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
