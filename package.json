{
  "name": "make-exercises-math",
  "version": "0.3.0",
  "description": "Make Exercises for Fundamental School Math Lectures",
  "repository": {
    "type": "",
    "url": "https://github.com/M3ssman/make-exercises-math.git"
  },
  "main": "src/exercises.math.js",
  "files": [
    "src/*.js",
    "src/*.d.ts"
  ],
  "scripts": {
    "pretest": "tsc -p .",
    "mocha": "./node_modules/.bin/mocha --reporter list ./test/*.js",
    "test": "NODE_ENV=test mocha --require ts-node/register",
    "coverage": "nyc --reporter=lcov --reporter=text npm test",
    "prepublish": "tsc -d -p ."
  },
  "keywords": [
    "education",
    "mathematics",
    "school"
  ],
  "author": {
    "name": "M3ssman",
    "email": "uwe.hartwig@bitsrc.info"
  },
  "dependencies": {
    "@types/chai": "^4.0.10",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.5.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "nyc": "^11.2.1",
    "ts-node": "^4.0.2"
  },
  "nyc": {
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/*.d.ts"
    ],
    "extension": [
      ".ts"
    ]
  }
}
