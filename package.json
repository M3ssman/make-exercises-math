{
  "name": "make-exercises-math",
  "version": "0.8.6",
  "description": "Make Exercises for Fundamental School Math Lectures",
  "license": "EUPL-1.1",
  "repository": {
    "type": "",
    "url": "https://github.com/M3ssman/make-exercises-math.git"
  },
  "main": "index.js",
  "typings": "index.d.ts",
  "files": [
    "src/*.js",
    "src/*.d.ts",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "test": "nyc mocha --full-trace --bail test/**/*.spec.ts",
    "pretest": "(find src/ -name '*.js*' -or -name '*.d.ts' | xargs rm && find test/ -name '*.js*' -or -name '*.d.ts' | xargs rm) || true",
    "mocha": "./node_modules/.bin/mocha --reporter list ./test/*.js",
    "prepare": "tsc -d -p ."
  },
  "keywords": [
    "education",
    "mathematics",
    "school"
  ],
  "author": {
    "name": "M3ssman",
    "email": "uwe.hartwig@bitsrc.info"
  },
  "dependencies": {
    "@types/chai": "^4.0.10",
    "@types/mocha": "^5.2.0"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^11.8.0",
    "ts-node": "^6.0.3"
  },
  "nyc": {
    "include": [
      "src/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
